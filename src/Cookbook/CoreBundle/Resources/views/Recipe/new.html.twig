 {% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/cookbookcore/css/smoothness/jquery-ui-1.8.22.custom.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/cookbookcore/star-rating/jquery.rating.css') }}" type="text/css" media="all" />
{% endblock %}
    
{% block body %}


{% include 'CookbookCoreBundle:Default:header.html.twig' %}

<div id="content_header">
{% if action == 'recipe_new' %}
<h1>Nouveau plat</h1>
{% else %}
<h1> {{ form.vars.value.name }}</h1>
{% endif %}
</div>

<div id="content_left">
<div class="stepImg">
<img src="{{ asset('bundles/cookbookcore/images/spoon.png') }}" />
</div>
</div>
<div id="content_middle">
<form action="" method="post" {{ form_enctype(form) }}>

{{ form_errors(form) }}
<table>
<tr>
<td>
    {{ form_label(form.name,'Nom du plat') }}
    {{ form_errors(form.name) }}
</td><td>
    {{ form_widget(form.name) }}
</td>
</tr>

<tr><td>
    {{ form_label(form.category, 'Cat√©gorie') }}
    {{ form_errors(form.category) }}
</td><td>
    <div id="categories" class="inline">{{ form_widget(form.category) }}</div><a href="#" id="add_categ">Ajouter une category</a>
</td>
</tr>

</table>
{{ form_rest(form) }}

<input type="submit" id="submit" value="{% if action == 'recipe_new' %}{{ 'Ajouter'|trans }}{% else %}{{ 'Modifier'|trans }}{% endif %}" name="submit" />
</form>

<div id="new_cat"></div>
</div>

<div id="content_right"></div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/cookbookcore/js/recipe.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cookbookcore/js/jquery-ui-1.8.22.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cookbookcore/star-rating/jquery.rating.pack.js') }}"></script>

 {% endblock %}