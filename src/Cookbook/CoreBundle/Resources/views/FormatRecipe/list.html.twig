 {% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/cookbookcore/jquery-ui-1.11.3/jquery-ui.min.css') }}" type="text/css" media="all" />
{% endblock %}

 {% block body %}

{% include 'CookbookCoreBundle:Default:header.html.twig' %}

<div id="content_header"><h1>Mes Formats</h1>
</div>


<div id="content_left">
<div class="stepImg">
<img src="{{ asset('bundles/cookbookcore/images/setting.png') }}" />
</div>
</div>
<div id="content_middle">
<div class="categories">
<a class="lienAdd" id="add_format" href="{{ path('formatrecipe_new') }}"><img src="{{ asset('bundles/cookbookcore/images/plus.gif') }}" border="0" /></a>
    <ul id="listFormats"> 
        {% for format in formats %}
                    <li class="ui-state-default" id="order_{{ format.id }}">
                            <span class="ui-icon ui-icon-arrowthick-2-n-s"></span>
                    <span id="order_span_{{ format.id }}" onclick="editFormat({{ format.id }})">{{ format.name }}</span>
                    <span class="rfloat hand" onclick="removeFormat({{ format.id }}); return false;">x</span>
                       
                    </li>
        {% endfor %}
        </ul>
 </div>
</div>
<div id="content_right">
</div>
<div id="new_format"></div>
<div id="dialog-confirm" title="Supprimer le format" style="display:none;">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Le format sera supprimé définitivement. Etes-vous sûr ??</p>
</div>
 {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/cookbookcore/jquery-ui-1.11.3/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cookbookcore/js/recipe.js') }}"></script>
 {% endblock %}